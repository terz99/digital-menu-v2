<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/CV"
        style="@style/MyCardViewStyle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                tools:background="@mipmap/ic_launcher"
                android:id="@+id/item_imageview"
                android:layout_width="@dimen/card_height"
                android:foregroundGravity="center"
                android:layout_height="@dimen/card_height"
                android:layout_margin="@dimen/regular_margin"
                android:layout_weight="0"
                />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:layout_marginBottom="@dimen/regular_margin"
                android:layout_marginRight="@dimen/regular_margin"
                android:layout_marginEnd="@dimen/regular_margin"
                android:layout_marginTop="@dimen/regular_margin"
                app:layout_constraintLeft_toRightOf="@+id/picture"
                android:layout_weight="1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                >

                <ImageButton
                    android:id="@+id/top_button"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_arrow_drop_up_black_48dp"
                    android:layout_width="@dimen/button_dimens"
                    android:layout_height="@dimen/button_dimens"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/regular_margin"
                    android:layout_marginStart="@dimen/regular_margin"
                    android:layout_marginBottom="@dimen/regular_margin"
                    />

                <ImageButton
                    android:id="@+id/bottom_button"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_arrow_drop_down_black_48dp"
                    android:layout_width="@dimen/button_dimens"
                    android:layout_height="@dimen/button_dimens"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/regular_margin"
                    android:layout_marginStart="@dimen/regular_margin"


                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/name_textview"
                    tools:text="Example Text"
                    android:textSize="32sp"
                    android:textStyle="normal"
                    android:layout_toRightOf="@+id/top_button"
                    android:layout_toEndOf="@+id/top_button"
                    android:layout_marginTop="@dimen/regular_margin"
                    android:layout_marginLeft="@dimen/regular_margin"
                    android:layout_marginStart="@dimen/regular_margin"
                    android:layout_alignParentTop="true"

                    />

                <TextView
                    android:id="@+id/counter_textview"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    tools:text="0"
                    android:gravity="center"
                    android:textSize="32sp"
                    android:layout_marginBottom="@dimen/regular_margin"
                    android:layout_marginRight="@dimen/regular_margin"
                    android:layout_marginEnd="@dimen/regular_margin"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/price_textview"
                    tools:text="Example Price"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/bottom_button"
                    android:layout_toEndOf="@+id/bottom_button"
                    android:layout_marginBottom="@dimen/regular_margin"
                    android:layout_marginLeft="@dimen/regular_margin"
                    android:layout_marginRight="@dimen/regular_margin"
                    android:textSize="32sp"/>


            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>