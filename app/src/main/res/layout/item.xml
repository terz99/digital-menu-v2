
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/CV"
        style="@style/MyCardViewStyle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_height"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/card_width"
                    android:layout_height="@dimen/card_height"
                    android:id="@+id/picture"
                    tools:background="@drawable/absolut_gangster"
                    >
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/name_textview"
                    tools:text="Name"
                    android:textSize="32sp"
                    android:textColor="@color/white"

                    android:layout_margin="16dp"/>
            </RelativeLayout>




            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/card_height"
                app:layout_constraintLeft_toRightOf="@+id/picture"
                android:layout_weight="1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                >


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="@dimen/card_height"
                    android:id="@+id/arrows_bar"
                    android:weightSum="0">


                    <ImageButton
                        android:id="@+id/top_button"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_arrow_drop_up_black_48dp"
                        android:layout_width="@dimen/button_dimens"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:id="@+id/counter_textview"
                        android:layout_width="@dimen/button_dimens"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="32sp"
                        tools:text="0" />

                    <ImageButton
                        android:id="@+id/bottom_button"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_arrow_drop_down_black_48dp"
                        android:layout_width="@dimen/button_dimens"
                        android:layout_weight="1"
                        android:layout_height="0dp"
                        />

                </LinearLayout>


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/arrows_bar"
                    android:layout_toEndOf="@+id/arrows_bar"
                    android:layout_margin="@dimen/regular_margin"
                    android:layout_alignParentTop="true"
                    android:id="@+id/add_button"
                    android:text="ADD"
                    android:textSize="32sp"
                    android:gravity="center"
                    android:background="@android:color/transparent"
                    />

                <ImageButton
                    android:id="@+id/info_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:background="@android:color/transparent"
                    android:layout_margin="@dimen/regular_margin"
                    android:src="@drawable/info_icon_2"/>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/price_textview"
                    tools:text="Example Price"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/arrows_bar"
                    android:layout_toEndOf="@+id/arrows_bar"
                    android:layout_marginBottom="@dimen/regular_margin"
                    android:layout_marginLeft="@dimen/regular_margin"
                    android:layout_marginRight="@dimen/regular_margin"
                    android:textSize="32sp"/>



            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
